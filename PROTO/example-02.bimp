IMPLEMENTATION counter_i
REFINES...
CONCRETE_CONSTANTS
  MAX
PROPRTIES
  MAX : INT & 
  MAX = 127
CONCRETE_VARIABLES
  value, error
INVARIANT
  value : INT & ERROR : BOOL & ...
INITIALISATION
  BEGIN
    value := 0;
    error := FALSE
  END
OPERATIONS
zero =
  BEGIN
    value := 0;
    error := FALSE
  END
inc =
  IF value < MAX
  THEN
    value := succ value
  ELSE
    error := TRUE
  END;
END
dec =
  IF 0 < value
  THEN
    value := pred value
  ELSE
    error := TRUE
  END;
END
