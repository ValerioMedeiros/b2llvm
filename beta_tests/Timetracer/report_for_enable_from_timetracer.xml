<?xml version="1.0" encoding="UTF-8"?>
<test-suite>
    <machine-name>timetracer</machine-name>
    <machine-invariant>
        <invariant-clause>idle : BOOL</invariant-clause>
        <invariant-clause>started : BOOL</invariant-clause>
        <invariant-clause>time_running : NAT</invariant-clause>
        <invariant-clause>time_stopped : NAT</invariant-clause>
    </machine-invariant>
    <operation-under-test>enable</operation-under-test>
    <partition-strategy>Boundary Values</partition-strategy>
    <combinatorial-criteria>All-Combinations</combinatorial-criteria>
    <oracle-strategy>
        <state-variables>true</state-variables>
        <return-variables>true</return-variables>
        <invariant-ok>true</invariant-ok>
    </oracle-strategy>
    <test-cases>
        <test-case>
            <id>1</id>
            <formula>time_running : NAT &amp; started : BOOL &amp; idle : BOOL &amp; not(started = FALSE) &amp; time_stopped : NAT</formula>
            <state-variables>
                <variable>
                    <identifier>idle</identifier>
                    <values>
                        <value>TRUE</value>
                    </values>
                </variable>
                <variable>
                    <identifier>time_running</identifier>
                    <values>
                        <value>0</value>
                    </values>
                </variable>
                <variable>
                    <identifier>time_stopped</identifier>
                    <values>
                        <value>0</value>
                    </values>
                </variable>
                <variable>
                    <identifier>started</identifier>
                    <values>
                        <value>TRUE</value>
                    </values>
                </variable>
            </state-variables>
            <operation-parameters/>
            <return-variables/>
        </test-case>
        <test-case>
            <id>2</id>
            <formula>time_running : NAT &amp; started : BOOL &amp; idle : BOOL &amp; started = FALSE &amp; time_stopped : NAT</formula>
            <state-variables>
                <variable>
                    <identifier>idle</identifier>
                    <values>
                        <value>TRUE</value>
                    </values>
                </variable>
                <variable>
                    <identifier>time_running</identifier>
                    <values>
                        <value>0</value>
                    </values>
                </variable>
                <variable>
                    <identifier>time_stopped</identifier>
                    <values>
                        <value>0</value>
                    </values>
                </variable>
                <variable>
                    <identifier>started</identifier>
                    <values>
                        <value>FALSE</value>
                    </values>
                </variable>
            </state-variables>
            <operation-parameters/>
            <return-variables/>
        </test-case>
    </test-cases>
</test-suite>
